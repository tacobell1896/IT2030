@model TeamListViewModel
@{ 
    ViewData["Title"] = "Name Change";
}
<form asp-action="Change" method="post">
    <input asp-for="@Model.UserName" placeholder="Type name here" class="mb-3" /><br />
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary" asp-route-activeConf="@Model.ActiveConf" asp-route-activeDiv="@Model.ActiveDiv">
        Back to Home
    </a>
    <button type="submit" class="btn btn-primary">
        Change Name
    </button>
</form>