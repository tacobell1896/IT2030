@model Customer
@{
    ViewBag.Title = "Registration";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/minimum-age.js"></script>
}

<form asp-action="Index" method="post">
    <div class="form-group row">
        <div class="col-sm-2"><label>Username:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Email Address:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="EmailAddress"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="EmailAddress"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>DOB:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.DOB" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.DOB" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Confirm Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
</form>